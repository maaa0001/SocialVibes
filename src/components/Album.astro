---
const { header } = Astro.props;
---

<div class="album-container" style="display: block;">
  <div class="album-header">
    <h1>{header}</h1>
    <a href="#" class="see-album">See album &gt;&gt;</a>
  </div>
  <div class="image-grid gallery">
    <div class="image-item"><img src="https://picsum.photos/200" alt="Image 1" /></div>
    <div class="image-item"><img src="https://picsum.photos/200" alt="Image 2" /></div>
    <div class="image-item"><img src="https://picsum.photos/200" alt="Image 3" /></div>
    <div class="image-item"><img src="https://picsum.photos/200" alt="Image 4" /></div>
    <div class="image-item"><img src="https://picsum.photos/200" alt="Image 5" /></div>
    <div class="image-item"><img src="https://picsum.photos/200" alt="Image 6" /></div>
  </div>
</div>

<style>
  .album-container {
    margin: auto;
    width: 100%;
    text-align: center;
    margin-bottom: 20px;
  }

  .album-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
  }

  .album-header h1 {
    font-size: 24px;
    margin: 0;
  }

  .see-album {
    color: black;
    text-decoration: none;
    font-weight: bold;
  }

  .see-album:hover {
    color: #3f98a7;
  }

  .image-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
  }

  .gallery {
    background-color: #e6f5f7;
    border-radius: 15px;
    padding: 20px;
    box-shadow: 0 4px 10px #00000021;
  }

  .image-item img {
    width: 100%;
    max-width: 180px;
    min-width: 20px;
    height: auto;
    border-radius: 10px;
  }
</style>
