---
import StatsItem from "./StatsItem.astro";
---

<div class="dashboard-container" style="display: none;">
  <div class="top-icons">
    <div class="icon red"><img src="image-icon.svg" alt="Trophy" /></div>
    <div class="icon green"><img src="image-icon.svg" alt="Friends" /></div>
    <div class="icon teal"><img src="image-icon.svg" alt="Flag" /></div>
    <div class="icon teal-light"><img src="image-icon.svg" alt="Target" /></div>
  </div>

  <div class="stats-grid">
    <StatsItem img="image-icon.svg" number="15" label="Friends" />
    <StatsItem img="image-icon.svg" number="4" label="Circels" />
    <div class="progress-bar-container">
      <p class="progress-label"><strong>39200</strong>/50000</p>
      <div class="progress-bar">
        <div class="progress" style="width: 78%;"></div>
      </div>
      <p class="level">Level 29</p>
      <p class="xp-note">600 XP to next level</p>
    </div>
    <StatsItem img="image-icon.svg" number="10" label="Streak" />
    <StatsItem img="image-icon.svg" number="15" label="Challenges" />
    <StatsItem img="image-icon.svg" number="37" label="Activities" />
    <StatsItem img="image-icon.svg" number="12972" label="Total XP" />
    <StatsItem img="image-icon.svg" number="4" label="Banners" />
    <StatsItem img="image-icon.svg" number="17" label="Adventures" />
  </div>

  <style>
    .dashboard-container {
      width: 100%;
    }

    .top-icons {
      border-style: solid;
      border-width: 1px;
      border-radius: 10px;
      color: #3f98a7;
      display: flex;
      justify-content: space-around;
      padding: 10px;
      margin-bottom: 20px;
    }

    .icon img {
      width: 60px;
      height: 60px;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 20px;
    }

    .progress-bar-container {
      grid-column: span 2;
      background-color: #e6f6f8;
      padding: 20px;
      border-radius: 12px;
      text-align: center;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    .progress-label {
      font-size: 20px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .progress-bar {
      background-color: #dcdcdc;
      border-radius: 10px;
      overflow: hidden;
      height: 15px;
      margin-bottom: 10px;
    }

    .progress {
      height: 100%;
      background-color: #f0b90b;
      border-radius: 10px;
    }

    .level {
      font-size: 18px;
      font-weight: bold;
      color: #f0b90b;
    }

    .xp-note {
      font-size: 12px;
      color: #888;
    }
  </style>
</div>
